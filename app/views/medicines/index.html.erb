<p style="color: green"><%= notice %></p>

<h1>Medicines</h1>

<div id="medicines">
  <% @medicines.each do |medicine| %>
    <%= render medicine %>
    <p>
      <%= link_to "Show this medicine", medicine %>
    </p>

</div>
<% if user_signed_in? %> 
  <%= link_to "New medicine", new_medicine_path %>
<%else%>
  <p>Only trusted users can add medicine</p>
<%end%>

<% end %>